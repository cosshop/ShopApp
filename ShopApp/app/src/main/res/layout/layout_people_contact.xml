<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/rtly_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_chat_top">
        <com.app.shop.shopapp.view.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_people_head"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_data"
        android:background="@drawable/bg_complaint_advice_shape"
        android:layout_below="@+id/rtly_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:listSelector="@null"
        android:scrollbars="none"></ListView>

</RelativeLayout>
