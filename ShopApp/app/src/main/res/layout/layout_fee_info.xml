<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="100dp"
              android:padding="15dp"
              android:layout_margin="15dp"
              android:background="@drawable/bg_white_shape"
              android:orientation="vertical">
        <TextView
            android:id="@+id/tv_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#676867"
            android:textSize="19sp"
            android:text="缴费信息:"
            android:textStyle="bold"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="70dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:gravity="center|left|top"
                android:layout_toLeftOf="@+id/tv_right"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:id="@+id/tv_pay_info"
                android:textSize="17sp"
                android:paddingTop="5dp"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1.5"
                android:text="dddadfafafa"
                android:textColor="#6D6D6D"/>
            <TextView
                android:id="@+id/tv_pay_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:drawableRight="@mipmap/ic_pay_fee_right"
                android:drawablePadding="20dp"
                android:text="立即缴费"
                android:textColor="#FC8585"/>
        </RelativeLayout>
</LinearLayout>