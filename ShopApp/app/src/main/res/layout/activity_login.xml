<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecebeb"
    android:orientation="vertical">

    <include layout="@layout/top_layout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/margin_20"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_input_phone_number"
            android:inputType="phone"
            android:drawableLeft="@mipmap/login_phonenumber"
            android:paddingLeft="@dimen/margin_10"
            android:drawablePadding="@dimen/margin_20"
            android:background="@mipmap/login_input_bg"
            android:hint="@string/str_pls_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:drawableLeft="@mipmap/login_password"
            android:paddingLeft="@dimen/margin_10"
            android:drawablePadding="18dp"
            android:background="@mipmap/login_input_bg"
            android:hint="@string/str_password"/>
        <Button
            android:layout_marginTop="@dimen/margin_40"
            android:id="@+id/btn_login_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_login"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            >
            <TextView
                android:id="@+id/tv_register_now"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_18"
                android:text="@string/str_register_now"/>
            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_18"
                android:text="@string/str_forget_password" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
