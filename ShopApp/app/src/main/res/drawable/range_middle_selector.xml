<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 选中时，小点为白色 -->
	<item android:state_checked="true" android:drawable="@drawable/range_miidle_bg"></item>
	<item android:state_pressed="true" android:drawable="@drawable/range_miidle_bg"></item>
	<item android:state_selected="true" android:drawable="@drawable/range_miidle_bg"></item>
    <!-- 未选中时，小点为透明色  -->
	<item android:state_checked="false" android:drawable="@android:color/transparent"></item>
</selector>
