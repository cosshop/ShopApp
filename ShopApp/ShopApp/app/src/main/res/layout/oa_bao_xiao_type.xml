<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/oa_bx_type_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <RadioGroup
        android:id="@+id/rg_oa_bx_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/range_bg"
        android:padding="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_gravity="center_horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_oa_bx_sdf"
            android:button="@null"
            android:paddingTop="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_20"
            android:paddingBottom="@dimen/margin_5"
            android:paddingRight="@dimen/margin_20"
            android:background="@drawable/range_left_selector"
            android:id="@+id/rb_oa_bx_sdf"
            android:layout_gravity="center_horizontal"
            android:textColor="@drawable/range_txt_selector"
            android:checked="true"
             />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_oa_bx_cf"
            android:button="@null"
            android:paddingTop="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_20"
            android:paddingBottom="@dimen/margin_5"
            android:paddingRight="@dimen/margin_20"
            android:background="@drawable/range_middle_selector"
            android:id="@+id/rb_oa_pur_storage"
            android:layout_gravity="center_horizontal"
            android:textColor="@drawable/range_txt_selector"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_oa_pur_out"
            android:id="@+id/rb_oa_pur_out"
            android:button="@null"
            android:paddingTop="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_20"
            android:paddingBottom="@dimen/margin_5"
            android:paddingRight="@dimen/margin_20"
            android:background="@drawable/range_right_selector"
            android:layout_gravity="center_horizontal"
            android:textColor="@drawable/range_txt_selector" />
    </RadioGroup>
