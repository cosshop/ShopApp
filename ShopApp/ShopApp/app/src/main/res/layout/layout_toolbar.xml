<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center|left"
                android:background="#FBFEFC"
    android:layout_height="55dp">
    <com.app.shop.shopapp.view.ClickImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/pro_bx_back"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_20"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@color/color_title_font"
        android:textSize="@dimen/font_size_20"
        android:text="@string/str_pro_bx"
        android:textStyle="bold"
        android:id="@+id/tv_title" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:textColor="@color/oa_item_title_color"
        android:textSize="17sp"
        android:text="@string/str_pro_bx"
        android:textStyle="bold"
        android:id="@+id/tv_right" />
</RelativeLayout>
