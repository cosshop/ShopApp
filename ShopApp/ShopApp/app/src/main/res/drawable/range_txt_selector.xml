<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 选中时，小点为白色 -->
	<item android:state_checked="true" android:color="#fe5b5b"></item>
	<item android:state_pressed="true" android:color="#fe5b5b"></item>
	<item android:state_selected="true" android:color="#fe5b5b"></item>
    <!-- 未选中时，小点为透明色  -->
	<item android:color="@android:color/white"></item>
</selector>
